# HTTP - Redirect to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name oldbuzzardhockey.com www.oldbuzzardhockey.com;
    return 301 https://$server_name$request_uri;
}

# HTTPS - Main site
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name oldbuzzardhockey.com www.oldbuzzardhockey.com;

    ssl_certificate /etc/letsencrypt/live/oldbuzzardhockey.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/oldbuzzardhockey.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://172.18.0.7:80;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /api/ {
        # Direct pass to avoid header parsing issues
        proxy_pass http://127.0.0.1:8000/api/;
        
        # Use HTTP/1.1 with proper connection handling
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        
        # Essential headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Buffer the entire response to handle chunked encoding issues
        proxy_buffering on;
        proxy_buffer_size 16k;
        proxy_buffers 8 16k;
        proxy_busy_buffers_size 32k;
        
        # Ignore certain headers that might be duplicated
        proxy_hide_header Transfer-Encoding;
        
        # Read full response before sending
        proxy_read_timeout 60s;
    }

    location /games-api/ {
        proxy_pass http://localhost:8002/api/v1/;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /stats-api/ {
        proxy_pass http://localhost:8003/api/v1/;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
